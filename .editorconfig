root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.nix]
indent_style = space
indent_size = 2
max_line_length = 79

[.envrc]
indent_style = space
indent_size = 2
max_line_length = 79

[README.md]
indent_style = space
indent_size = 4
max_line_length = 99
